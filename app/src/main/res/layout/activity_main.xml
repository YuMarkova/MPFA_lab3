<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yulia.lab3.MainActivity">


    <LinearLayout
        style="@style/LayoutTheme"
        android:orientation="vertical"
        android:gravity="center">


        <EditText
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:paddingHorizontal="5sp"
            android:textColorHint="#997755"
            android:paddingVertical="3sp"
            android:hint="@string/name_view"
            android:id="@+id/name_edit"
            android:inputType="textPersonName"
            android:background="@color/colorTextEdit"/>

        <Button
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:textSize="13pt"
            android:paddingHorizontal="20sp"
            android:textColor="#886644"
            android:background="@drawable/button_normal"
            android:text="@string/name_button"
            android:id="@+id/button_take_photo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/warning_view"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
